---
const LINKS = [
  { href: "/privado", label: "Home" },
  { href: "/productos", label: "Productos" },
  { href: "/contacto", label: "Contacto" }, // si quieres
];
---

<header class="sticky top-0 z-40 bg-white/80 backdrop-blur border-b border-slate-200">
  <div class="max-w-7xl mx-auto px-6 h-14 flex items-center justify-between">
    <a href="/privado" class="font-semibold text-slate-900">Inbolsa</a>
    <nav class="flex items-center gap-6 text-slate-700">
      {LINKS.map(l => <a href={l.href} class="hover:text-slate-900">{l.label}</a>)}
    </nav>
  </div>
</header>
