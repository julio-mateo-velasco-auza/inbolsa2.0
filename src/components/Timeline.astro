---
const steps = [
  { year: '1974', title: 'Inauguración', text: 'Origen y primeros clientes.' },
  { year: '2000s', title: 'Modernización', text: 'Renovación de maquinaria y procesos.' },
  { year: '2010s', title: 'Expansión', text: 'Nuevas plantas y líneas especializadas.' },
  { year: '2020', title: 'Certificación OEA', text: 'Estándares de seguridad y comercio.' },
  { year: '2023+', title: 'Innovación', text: 'Block bottom, telas UV y mejoras continuas.' },
];
---
<section id="historia" class="py-16">
  <div class="mx-auto max-w-7xl px-4">
    <h2 class="text-2xl md:text-3xl font-semibold">Nuestra historia</h2>
    <ol class="mt-8 relative border-s border-slate-200 space-y-8">
      {steps.map((s, idx) => (
        <li class="pl-6">
          <span class="absolute -left-[7px] mt-1.5 h-3.5 w-3.5 rounded-full bg-brand-600 shadow-[0_0_18px_2px_rgba(62,125,210,.45)]"></span>
          <div class="text-xs uppercase tracking-wider text-brand-700">{s.year}</div>
          <div class="font-medium">{s.title}</div>
          <p class="text-sm text-slate-600 mt-1">{s.text}</p>
        </li>
      ))}
    </ol>
  </div>
</section>
