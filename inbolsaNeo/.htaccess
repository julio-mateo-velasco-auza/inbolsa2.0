# htdocs/inbolsaNeo/.htaccess
# Asegura rutas relativas correctas y SPA fallback solo para /app/*
RewriteEngine On
RewriteBase /inbolsaNeo/

# Servir archivos reales tal cual
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Fallback para rutas SPA bajo /app/
RewriteRule ^app/.*$ /inbolsaNeo/app/index.html [L]
